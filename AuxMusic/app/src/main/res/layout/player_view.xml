<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/player_view_play_button"
            android:layout_height="65dp"
            android:layout_width="65dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_play_arrow_white_48px"
            android:paddingLeft="100dp"
            android:paddingRight="100dp" />

        <ImageButton
            android:id="@+id/player_view_back_button"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:background="@drawable/ic_skip_previous_white_48px"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/player_view_play_button"
            android:layout_marginEnd="100dp" />

        <ImageButton
            android:id="@+id/player_view_skip_button"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:background="@drawable/ic_skip_next_white_48px"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/player_view_play_button"
            android:layout_marginStart="100dp" />

    </RelativeLayout>
</merge>