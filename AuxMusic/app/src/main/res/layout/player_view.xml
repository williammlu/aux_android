<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/player_view_play_button"
            android:layout_width="wrap_content"
            android:text="Play"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/player_view_back_button" />

        <Button
            android:text="skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_view_skip_button"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/player_view_play_button" />

        <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_view_back_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

</merge>